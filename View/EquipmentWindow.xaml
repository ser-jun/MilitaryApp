<Window x:Class="MilitaryApp.View.EquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Управление оборудованием" 
        Height="768" Width="1366"
        WindowState="Maximized"
        ResizeMode="NoResize"
        FontFamily="Segoe UI"
        Background="#FFECEFF1">

    <Window.Resources>
        <Style TargetType="Button" x:Key="ModernButton">
            <Setter Property="Background" Value="#FF37474F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF263238"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="32"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF455A64"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ComboBox" x:Key="ModernComboBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#FFB0BEC5"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="TextBox" x:Key="ModernTextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#FFB0BEC5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Top Filter Panel -->
        <Border DockPanel.Dock="Top" 
                Background="#FF37474F" 
                Padding="10"
                CornerRadius="0,0,8,8"
                BorderThickness="0,0,0,2"
                BorderBrush="#FF263238">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Filter by Type and Unit -->
                <GroupBox Header="Фильтр по типу и части" 
                          Foreground="White"
                          FontWeight="Bold"
                          Margin="5"
                          Padding="5"
                          BorderBrush="#FF546E7A">
                    <StackPanel Orientation="Horizontal">
                        <ComboBox Width="180" 
                                  Height="32" 
                                  Margin="5"
                                  ItemsSource="{Binding EquipmentTypes}"
                                  SelectedItem="{Binding SelectedEquipmentType, Mode=TwoWay}"
                                  DisplayMemberPath="TypeEquipment"
                                  SelectedValuePath="EquipmentId"
                                  Style="{StaticResource ModernComboBox}"/>

                        <ComboBox Width="180" 
                                  Height="32" 
                                  Margin="5"
                                  ItemsSource="{Binding MilitaryUnit}"
                                  SelectedItem="{Binding SelectedFilterMilitaryUnit}"
                                  DisplayMemberPath="Name"
                                  Style="{StaticResource ModernComboBox}"/>

                        <Button Content="Применить" 
                                Width="100" 
                                Margin="5"
                                Command="{Binding ApplyFilterByTypeOrUnitCommand}"
                                Style="{StaticResource ModernButton}"/>
                    </StackPanel>
                </GroupBox>

                <!-- Filter by Quantity -->
                <GroupBox Header="Фильтр по количеству" 
                          Foreground="White"
                          FontWeight="Bold"
                          Margin="5"
                          Padding="5"
                          BorderBrush="#FF546E7A">
                    <StackPanel Orientation="Horizontal">
                        <TextBox Text="{Binding MinimalQuantityEquipments, UpdateSourceTrigger=PropertyChanged}" 
                                 Width="120" 
                                 Margin="5"
                                 Style="{StaticResource ModernTextBox}"/>

                        <Button Content="Применить" 
                                Width="100" 
                                Margin="5"
                                Command="{Binding ApplyFilterByQuantityCommand}"
                                Style="{StaticResource ModernButton}"/>
                    </StackPanel>
                </GroupBox>

                <!-- Reset Button -->
                <Button Content="Сбросить фильтры" 
                        Width="120" 
                        Margin="5"
                        Command="{Binding ResetFiltersCommand}"
                        Style="{StaticResource ModernButton}"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Margin="10,5,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Equipment List -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="8"
                    Padding="5"
                    Margin="0,0,5,0"
                    BorderBrush="#FFB0BEC5"
                    BorderThickness="1">
                <DataGrid AutoGenerateColumns="False"
                         ItemsSource="{Binding EquipmentItem}"
                         SelectionMode="Single"
                         SelectedItem="{Binding SelectedEquipment}"
                         IsReadOnly="True"
                         GridLinesVisibility="None"
                         RowBackground="#FFF5F5F5"
                         AlternatingRowBackground="White"
                         BorderThickness="0"
                         FontSize="14">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Название" Binding="{Binding NameEquipment}" Width="*"/>
                        <DataGridTextColumn Header="Тип" Binding="{Binding TypeEquipment}" Width="*"/>
                        <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="*"/>
                        <DataGridTextColumn Header="Часть" Binding="{Binding UnitName}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Control Panel -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="8"
                    Padding="15"
                    BorderBrush="#FFB0BEC5"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Название" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding NameEquipment, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBox}"/>

                    <TextBlock Text="Тип" Style="{StaticResource LabelStyle}"/>
                    <ComboBox ItemsSource="{Binding EquipmentTypes}"
                              SelectedItem="{Binding SelectedEquipmentType, Mode=TwoWay}"
                              DisplayMemberPath="TypeEquipment"
                              SelectedValuePath="EquipmentId"
                              Style="{StaticResource ModernComboBox}"/>

                    <TextBlock Text="Количество" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBox}"/>

                    <TextBlock Text="Военная часть" Style="{StaticResource LabelStyle}"/>
                    <ComboBox ItemsSource="{Binding MilitaryUnit}"
                              SelectedItem="{Binding SelectedMilitaryUnit, Mode=TwoWay}"
                              DisplayMemberPath="Name"
                              Style="{StaticResource ModernComboBox}"/>

                    <Button Command="{Binding AddItem}" 
                            Content="Добавить" 
                            Margin="0,15,0,0"
                            Style="{StaticResource ModernButton}"/>
                    <Button Command="{Binding DeleteItem}" 
                            Content="Удалить" 
                            Margin="0,10,0,0"
                            Style="{StaticResource ModernButton}"/>
                    <Button Command="{Binding UpdateItem}" 
                            Content="Изменить" 
                            Margin="0,10,0,0"
                            Style="{StaticResource ModernButton}"/>
                    <Button Command="{Binding NavigateToMainPageCommand}" 
                            Content="На главную" 
                            Margin="0,10,0,0"
                            Style="{StaticResource ModernButton}"/>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>