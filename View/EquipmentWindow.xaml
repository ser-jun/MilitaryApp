<Window x:Class="MilitaryApp.View.EquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MilitaryApp.View"
        mc:Ignorable="d"
        Title="Equipment Management" 
        Height="768" Width="1366"
        WindowState="Maximized"
        ResizeMode="NoResize"
        FontFamily="Segoe UI"
        Background="#FFECEFF1">

    <DockPanel>
        <!-- Top Panel with Filters -->
        <Border DockPanel.Dock="Top" 
                Background="#FF37474F" 
                Padding="10"
                CornerRadius="0,0,8,8"
                BorderThickness="0,0,0,2"
                BorderBrush="#FF263238">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Filter by Type and Unit -->
                <GroupBox Header="Фильтр по типу и части" 
                          Foreground="White"
                          FontWeight="Bold"
                          Margin="5"
                          Padding="5"
                          BorderBrush="#FF546E7A">
                    <StackPanel Orientation="Horizontal">
                        <ComboBox Width="180" 
                                  Height="32" 
                                  Margin="5"
                                  ItemsSource="{Binding EquipmentTypes}"
                                  SelectedItem="{Binding SelectedEquipmentType, Mode=TwoWay}"
                                  DisplayMemberPath="TypeEquipment"
                                  SelectedValuePath="EquipmentId"/>

                        <ComboBox Width="180" 
                                  Height="32" 
                                  Margin="5"
                                  ItemsSource="{Binding MilitaryUnit}"
                                  SelectedItem="{Binding SelectedFilterMilitaryUnit}"
                                  DisplayMemberPath="Name"/>

                        <Button Content="Применить фильтр" 
                                Width="120" 
                                Height="32" 
                                Margin="5"
                                Command="{Binding ApplyFilterByTypeOrUnitCommand}"/>
                    </StackPanel>
                </GroupBox>

                <!-- Filter by Quantity -->
                <GroupBox Header="Фильтр по количеству" 
                          Foreground="White"
                          FontWeight="Bold"
                          Margin="5"
                          Padding="5"
                          BorderBrush="#FF546E7A">
                    <StackPanel Orientation="Horizontal">
                        <ComboBox Width="180" 
                                  Height="32" 
                                  Margin="5"
                                  ItemsSource="{Binding EquipmentTypes}"
                                  SelectedItem="{Binding SelectedEquipmentType, Mode=TwoWay}"
                                  DisplayMemberPath="TypeEquipment"
                                  SelectedValuePath="EquipmentId"/>

                        <TextBox Width="100" 
                                  Height="32" 
                                  Margin="5"
                                  Text="{Binding MinimalQuantityEquipments, UpdateSourceTrigger=PropertyChanged}"/>

                        <Button Content="Применить" 
                                Width="100" 
                                Height="32" 
                                Margin="5"
                                Command="{Binding ApplyFilterByQuantityCommand}"/>
                    </StackPanel>
                </GroupBox>

                <!-- Reset Button -->
                <Button Content="Сбросить" 
                        Width="120" 
                        Height="32" 
                        Margin="5"
                        VerticalAlignment="Bottom"
                        Command="{Binding ResetFiltersCommand}"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Margin="10,5,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- Data Grid -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="8"
                    Padding="5"
                    Margin="0,0,5,0"
                    BorderBrush="#FFB0BEC5"
                    BorderThickness="1">
                <DataGrid AutoGenerateColumns="False"
                          ItemsSource="{Binding EquipmentItem}"
                          SelectionMode="Single"
                          SelectedItem="{Binding SelectedEquipment}"
                          IsReadOnly="True"
                          GridLinesVisibility="None"
                          RowBackground="#FFF5F5F5"
                          AlternatingRowBackground="White"
                          BorderThickness="0"
                          FontSize="14">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding NameEquipment}" Width="*"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding TypeEquipment}" Width="*"/>
                        <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="*"/>
                        <DataGridTextColumn Header="Unit" Binding="{Binding UnitName}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Control Panel -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="8"
                    Padding="10"
                    BorderBrush="#FFB0BEC5"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Название" 
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NameEquipment, UpdateSourceTrigger=PropertyChanged}" 
                             Height="32"
                             Padding="5"/>

                    <TextBlock Text="Type" 
                               FontWeight="Bold"
                               Margin="0,10,0,5"/>
                    <TextBox Text="{Binding TypeEquipment, UpdateSourceTrigger=PropertyChanged}"
                             Height="32"
                             Padding="5"/>

                    <TextBlock Text="Количество" 
                               FontWeight="Bold"
                               Margin="0,10,0,5"/>
                    <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                             Height="32"
                             Padding="5"/>

                    <TextBlock Text="Часть" 
                               FontWeight="Bold"
                               Margin="0,10,0,5"/>
                    <ComboBox ItemsSource="{Binding MilitaryUnit}"
                              SelectedItem="{Binding SelectedMilitaryUnit, Mode=TwoWay}"
                              DisplayMemberPath="Name"
                              Height="32"/>

                    <Button Command="{Binding AddItem}" 
                            Content="Add Item" 
                            Height="32"
                            Margin="0,10,0,5"/>
                    <Button Command="{Binding DeleteItem}" 
                            Content="Delete" 
                            Height="32"
                            Margin="0,5,0,5"/>
                    <Button Command="{Binding UpdateItem}" 
                            Content="Update" 
                            Height="32"
                            Margin="0,5,0,5"/>
                    <Button Command="{Binding NavigateToMainPageCommand}" 
                            Content="На главную" 
                            Height="32"
                            Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>