<Window x:Class="MilitaryApp.View.InfrastructureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MilitaryApp.View"
        mc:Ignorable="d"
        Title="Infrastructure Management" 
        Height="768" Width="1366"
        WindowState="Maximized"
        ResizeMode="NoResize"
        FontFamily="Segoe UI"
        Background="#FFECEFF1">

    <DockPanel>
        <!-- Top Panel with Filters -->
        <Border DockPanel.Dock="Top" 
                Background="#FF37474F" 
                Padding="10"
                CornerRadius="0,0,8,8"
                BorderThickness="0,0,0,2"
                BorderBrush="#FF263238">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Filter Controls -->
                <GroupBox Header="Фильтрация" 
                          Foreground="White"
                          FontWeight="Bold"
                          Margin="5"
                          Padding="5"
                          BorderBrush="#FF546E7A">
                    <StackPanel Orientation="Horizontal">
                        <ComboBox Width="180" 
                                  Height="32" 
                                  Margin="5"
                                  ItemsSource="{Binding MilitaryUnit}"
                                  SelectedItem="{Binding SelectedFilterMilitaryUnit}"
                                  DisplayMemberPath="Name"/>

                        <TextBox Width="180" 
                                 Height="32" 
                                 Margin="5" 
                                 Text="{Binding NameBuildingSearch, UpdateSourceTrigger=PropertyChanged}"/>

                        <Button Content="Применить фильтр" 
                                Width="120" 
                                Height="32" 
                                Margin="5"
                                Command="{Binding ApplyFilterByNameOrUnitCommand}"/>

                        <Button Content="Очистить" 
                                Width="120" 
                                Height="32" 
                                Margin="5"
                                Command="{Binding ResetFiltersCommand}"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Margin="10,5,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- Data Grid -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="8"
                    Padding="5"
                    Margin="0,0,5,0"
                    BorderBrush="#FFB0BEC5"
                    BorderThickness="1">
                <DataGrid IsReadOnly="True"
                          ItemsSource="{Binding InfrastructureItem}"
                          SelectedItem="{Binding SelectedInfrastructure}"
                          AutoGenerateColumns="False"
                          GridLinesVisibility="None"
                          RowBackground="#FFF5F5F5"
                          AlternatingRowBackground="White"
                          BorderThickness="0"
                          FontSize="14">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Unit" Binding="{Binding UnitName}" Width="*"/>
                        <DataGridTextColumn Header="Year build" Binding="{Binding YearBuilt}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Control Panel -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="8"
                    Padding="10"
                    BorderBrush="#FFB0BEC5"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Название" 
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NameInfrastructure, UpdateSourceTrigger=PropertyChanged}" 
                             Height="32"
                             Padding="5"/>

                    <TextBlock Text="Часть" 
                               FontWeight="Bold"
                               Margin="0,10,0,5"/>
                    <ComboBox ItemsSource="{Binding MilitaryUnit}"
                              SelectedItem="{Binding SelectedMilitaryUnit, Mode=TwoWay}"
                              DisplayMemberPath="Name"
                              Height="32"/>

                    <TextBlock Text="Год постройки" 
                               FontWeight="Bold"
                               Margin="0,10,0,5"/>
                    <TextBox Text="{Binding YearBuild}" 
                             Height="32"
                             Padding="5"/>

                    <Button Command="{Binding AddItemCommand}" 
                            Content="Добавить" 
                            Height="32"
                            Margin="0,10,0,5"/>
                    <Button Command="{Binding DeleteItemCommand}" 
                            Content="Удалить" 
                            Height="32"
                            Margin="0,5,0,5"/>
                    <Button Command="{Binding UpdateItemCommand}" 
                            Content="Изменить" 
                            Height="32"
                            Margin="0,5,0,5"/>
                    <Button Command="{Binding NavigateToMainPageCommand}" 
                            Content="На главную" 
                            Height="32"
                            Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>