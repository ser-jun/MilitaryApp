<Window x:Class="MilitaryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MilitaryApp"
         xmlns:views="clr-namespace:MilitaryApp.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowState="Maximized"
        ResizeMode="NoResize">
    <Window.Resources>
        <views:ItemTypeToVisibilityConverter x:Key="ItemTypeToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <DataGrid AutoGenerateColumns="False" 
          ItemsSource="{Binding MilitaryStructureItems}" 
          SelectedItem="{Binding SelectedItem}" 
          SelectionMode="Single" 
          Margin="0,0,347,0">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Army Name" Binding="{Binding ArmyName}" />
                <DataGridTextColumn Header="Division Name" Binding="{Binding DivisionName}" />
                <DataGridTextColumn Header="Corps Name" Binding="{Binding CorpsName}" />
                <DataGridTextColumn Header="Unit Name" Binding="{Binding UnitName}" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" Margin="458,10,10,10">
            <Button 
        Content="Удалить армию" 
        Command="{Binding RemoveItemCommand}"
        Visibility="{Binding SelectedItem.ItemType, 
                     Converter={StaticResource ItemTypeToVisibilityConverter}, 
                     ConverterParameter=Army}" Height="40"/>

            <Button 
        Content="Удалить дивизию" 
        Command="{Binding RemoveItemCommand}"
        Visibility="{Binding SelectedItem.ItemType, 
                     Converter={StaticResource ItemTypeToVisibilityConverter}, 
                     ConverterParameter=Division}" Height="43"/>
            <Button 
        Content="Удалить корпус" 
        Command="{Binding RemoveItemCommand}"
        Visibility="{Binding SelectedItem.ItemType, ConverterParameter=Corps, Converter={StaticResource ItemTypeToVisibilityConverter}}" Height="42"/>

            <Button 
        Content="Удалить часть" 
        Command="{Binding RemoveItemCommand}"
        Visibility="{Binding SelectedItem.ItemType, 
                     Converter={StaticResource ItemTypeToVisibilityConverter}, 
                     ConverterParameter=Unit}" Height="42"/>
        </StackPanel>



        <TextBox Text="{Binding NewItemName, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="564,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="603,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="663,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Command="{Binding AddItemCommand}" Content="Add" HorizontalAlignment="Left" Margin="564,311,0,0" VerticalAlignment="Top"/>
        <!--<Button Command="{Binding RemoveItemCommand}"  Content="Del" HorizontalAlignment="Left" Margin="696,275,0,0" VerticalAlignment="Top"/>-->
        <!--<Button Content="Update" Command="{Binding UpdateItemCommand}" HorizontalAlignment="Left" Margin="663,316,0,0" VerticalAlignment="Top"/>-->
    </Grid>
</Window>
