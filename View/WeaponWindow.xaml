<Window x:Class="MilitaryApp.View.WeaponWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MilitaryApp.View"
        mc:Ignorable="d"
        Title="Управление вооружением" 
        Height="768" Width="1366"
        WindowState="Maximized"
        ResizeMode="NoResize"
        FontFamily="Segoe UI"
        Background="#FFECEFF1">

    <DockPanel>
        <!-- Top Panel with Filters -->
        <Border DockPanel.Dock="Top" 
                Background="#FF37474F" 
                Padding="10"
                CornerRadius="0,0,8,8"
                BorderThickness="0,0,0,2"
                BorderBrush="#FF263238">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Filter by Type and Unit -->
                <GroupBox Header="Фильтр по типу и части" 
                          Foreground="White"
                          FontWeight="Bold"
                          Margin="5"
                          Padding="5"
                          BorderBrush="#FF546E7A">
                    <StackPanel Orientation="Horizontal">
                        <ComboBox Width="180" 
                                  Height="32" 
                                  Margin="5"
                                  ItemsSource="{Binding WeaponTypes}"
                                  SelectedItem="{Binding SelectedWeaponType, Mode=TwoWay}"
                                  DisplayMemberPath="TypeWeapon"/>

                        <ComboBox Width="180" 
                                  Height="32" 
                                  Margin="5"
                                  ItemsSource="{Binding MilitaryUnit}"
                                  SelectedItem="{Binding SelectedFilterMilitaryUnit}"
                                  DisplayMemberPath="Name"/>

                        <Button Content="Применить" 
                                Width="100" 
                                Height="32" 
                                Margin="5"
                                Command="{Binding ApplyFilterByTypeOrUnitCommand}"/>
                    </StackPanel>
                </GroupBox>

                <!-- Filter by Quantity and Name -->
                <GroupBox Header="Фильтр по количеству и названию" 
                          Foreground="White"
                          FontWeight="Bold"
                          Margin="5"
                          Padding="5"
                          BorderBrush="#FF546E7A">
                    <StackPanel Orientation="Horizontal">
                        <TextBox Width="120" 
                                 Height="32" 
                                 Margin="5" 
                                 Text="{Binding MinimalQuantity, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Минимальное количество"/>

                        <TextBox Width="180" 
                                 Height="32" 
                                 Margin="5" 
                                 Text="{Binding NameWeaponSearch, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Поиск по названию"/>

                        <Button Content="Сбросить" 
                                Width="100" 
                                Height="32" 
                                Margin="5"
                                Command="{Binding ResetFiltersCommand}"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Margin="10,5,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- Data Grid -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="8"
                    Padding="5"
                    Margin="0,0,5,0"
                    BorderBrush="#FFB0BEC5"
                    BorderThickness="1">
                <DataGrid AutoGenerateColumns="False"
                          IsReadOnly="True"
                          ItemsSource="{Binding WeaponItem}"
                          SelectedItem="{Binding SelectedWeaponItem}"
                          SelectionMode="Single"
                          GridLinesVisibility="None"
                          RowBackground="#FFF5F5F5"
                          AlternatingRowBackground="White"
                          BorderThickness="0"
                          FontSize="14">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Название" Binding="{Binding NameWeapon}" Width="*"/>
                        <DataGridTextColumn Header="Тип" Binding="{Binding TypeWeapon}" Width="*"/>
                        <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="*"/>
                        <DataGridTextColumn Header="Часть" Binding="{Binding NameUnit}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Control Panel -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="8"
                    Padding="10"
                    BorderBrush="#FFB0BEC5"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Input Fields -->
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="Название" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NameWeapon, UpdateSourceTrigger=PropertyChanged}"
                                 Height="32"
                                 Padding="5"/>

                        <TextBlock Text="Тип" 
                                   FontWeight="Bold"
                                   Margin="0,10,0,5"/>
                        <TextBox Text="{Binding TypeWeapon, UpdateSourceTrigger=PropertyChanged}"
                                 Height="32"
                                 Padding="5"/>

                        <TextBlock Text="Количество" 
                                   FontWeight="Bold"
                                   Margin="0,10,0,5"/>
                        <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                                 Height="32"
                                 Padding="5"/>

                        <TextBlock Text="Часть" 
                                   FontWeight="Bold"
                                   Margin="0,10,0,5"/>
                        <ComboBox ItemsSource="{Binding MilitaryUnit}"
                                  SelectedItem="{Binding SelectedMilitaryUnit, Mode=TwoWay}"
                                  DisplayMemberPath="Name"
                                  Height="32"/>
                    </StackPanel>

                    <!-- Buttons - arranged in two columns -->
                    <UniformGrid Grid.Row="2" 
                                 Columns="2" 
                                 Rows="2" 
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Bottom"
                                 Margin="0,10,0,0">
                        <Button Command="{Binding AddEntry}" 
                                Content="Добавить" 
                                Height="32"
                                Margin="2"/>
                        <Button Command="{Binding UpdateEntry}" 
                                Content="Изменить" 
                                Height="32"
                                Margin="2"/>
                        <Button Command="{Binding DeleteEntry}" 
                                Content="Удалить" 
                                Height="32"
                                Margin="2"/>
                        <Button Command="{Binding NavigateToMainPageCommand}" 
                                Content="На главную" 
                                Height="32"
                                Margin="2"/>
                    </UniformGrid>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>